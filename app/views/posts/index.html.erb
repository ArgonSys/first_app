<h1>TopPage</h1>
<div class="new">
    <%= link_to '新規投稿', '/posts/new', method: :GET %>
</div>

<% @posts.each do |post| %>
  <div class="post">
    <div class="post-date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
  </div>
<% end %>

